@import '~normalize.css';
@import '../fonts/iconfont.css';

html, body
    height 100%
    margin 0
    padding 0

ul,li,p
    margin 0
    padding 0
    list-style none

.breadcrumb 
    display flex
    padding 5px 0 25px 
    color #333333
    font-size 14px
    position absolute
    z-index 12
    p {
        margin-right 3px
    }
    .time 
        margin-left 10px
    .blue 
        color:#3577EC
    .border-b 
        text-decoration:underline
.time-picker 
    display flex
    justify-content:flex-start
    align-items center
    background #fff
    box-shadow 0px 4px 8px 0px rgba(62,128,195,0.04)
    border-radius 4px 
    font-size 14px
    color #666
    width 100%
    box-sizing border-box
    position absolute
    top 46px
    z-index 12
    .text 
        margin-right:10px
.flex 
    display flex
    align-items center
.flex-be 
    display flex
    align-items center
    justify-content space-between
.w100
    width 100%
.m-10 
    margin 0 10px
.w-220
    width 220px !important

.w-260 
    width 260px !important
.w-180 
    width 180px
.ml-40
    margin-left 30px
.bg-white 
    background #fff
section 
    height 100%
.el-tabs__content
    height (100%-55px)

.el-menu-item 
    height 100px
    line-height 20px
    display flex
    flex-direction column
    justify-content center
    align-items center
    .navicon
        display block
        font-size 30px
        margin-bottom 10px
        color #fff

.el-menu-item:hover 
    background rgba(74,81,103,1) !important

.el-menu-item.is-active 
    background linear-gradient(-90deg,rgba(41,105,219,1) 0%,rgba(28,92,208,1) 100%)
    color #fff

.main 
    background #edf2f7
    width 100%
    height 100%
    translate .5s
.el-aside
    background #2E3447